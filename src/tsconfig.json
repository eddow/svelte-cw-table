{
	"compilerOptions": {
	  "sourceMap": false,
	  "outDir": "../dist",
	  "noImplicitAny": false,
	  "moduleResolution": "node",
	  "experimentalDecorators": true,
	  "declaration": true,
	  "declarationMap": true,
	  "emitDecoratorMetadata": true,
	  "target": "es6",
	  "lib": [
		"dom",
		"es5",
		"es2015.promise"
	  ],
	  "allowSyntheticDefaultImports": true,
	  "allowJs": true,
		  "typeRoots": ["../node_modules/@types"],
		  "baseUrl": "."
	},
	  "exclude": [
		  "**/*.spec.ts",
		  "**/*.d.ts"
	  ],
	  "include": [
		  "./**/*.ts",
		  "./**/*.svelte"
	  ]
  }